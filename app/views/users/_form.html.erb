<%= form_for(@user, :html => { :class => "form-horizontal" }) do |f| %>

<%= render 'shared/error_messages' %>


    <div class="form-group">
        <%= f.label :first_name, :class => "col-sm-3 control-label" %>
        <div class="col-sm-9">
            <%= f.text_field :first_name, :placeholder => "first name", :class => "form-control" %>
        </div>
    </div>

    <div class="form-group">
        <%= f.label :last_name, :class => "col-sm-3 control-label" %>
        <div class="col-sm-9">
            <%= f.text_field :last_name, :placeholder => "last name", :class => "form-control" %>
        </div>
    </div>

    <div class="form-group">
        <%= f.label :username, :class => "col-sm-3 control-label" %>
        <div class="col-sm-9">
            <%= f.text_field :username, :placeholder => "alias", :class => "form-control" %>
        </div>
    </div>

    <div class="form-group">
        <%= f.label :email, :class => "col-sm-3 control-label" %>
        <div class="col-sm-9">
            <%= f.text_field :email, :placeholder => "email address", :class => "form-control" %>
        </div>
    </div>
    
    <div class="form-group">
        <%= f.label :password, :class => "col-sm-3 control-label" %>
        <div class="col-sm-9">
            <%= f.password_field :password, :placeholder => "password", :class => "form-control" %>
        </div>
    </div>
    
    <div class="form-group">
        <%= f.label :password_confirmation, "Confirmation", :class => "col-sm-3 control-label" %>
        <div class="col-sm-9">
            <%= f.password_field :password_confirmation, :placeholder => "password confirmation", :class => "form-control" %>
        </div>
    </div>
    
    <div class="form-group pull-right">
        <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
    </div>

<% end %>