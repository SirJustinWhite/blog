<% provide(:title, "Edit user") %>
<div class="container well col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-12">
  <h1>Update your profile</h1>

  <div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

          
      
      <%= render 'form' %>

      <div class="row form-group col-sm-9 col-sm-offset-3">
            <%= gravatar_for @user %>
            <button class="btn btn-large btn-default"><%= link_to "change", "http://gravatar.com/emails", :target => "_blank"%></button>
          </div>
    </div>
  </div>
</div>